{extends '../layout.latte'}

{block obsah}
    {if isset($message)}
        <h2>{$message}</h2>
    {/if}
  
    <form method="post" >
        <input type="hidden" name="id" value={$form['id']}/> 
        <div class="form-group">
            <label for="desc">Description</label>
            <input class="form-control" type="text" id="desc" name="description" value="{isset($form['description']) ? $form['description'] : ''}" />
        </div>
        <div class="form-group">
            <select class="form-control" required  name="type">
                <option selected disabled>Select relation type</option>
                <option n:foreach="$types as $type" value="{$type['id_relation_type']}" {$type['id_relation_type'] == $form['id_relation_type'] ? "selected": "" } >
                    {$type['name']}
                </option>
            </select>
        </div>
        <input type="submit" name="add" value="add" value="Change" class="btn btn-primary" />
        </div> 
    </form>

{/block}
